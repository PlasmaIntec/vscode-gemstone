{
	"name": "gemstone",
	"displayName": "GemStone IDE",
	"description": "GemStone/S 64 Bit Extension for Visual Studio Code",
	"version": "0.1.1",
	"publisher": "jgfoster.net",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Debuggers",
		"Programming Languages"
	],
	"keywords": [
		"GemStone",
		"Smalltalk",
		"Database",
		"Object Database"
	],
	"activationEvents": [
		"onView:gemstone-logins"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "gemstone.login",
				"title": "Login"
			},
			{
				"command": "gemstone.logout",
				"title": "Logout"
			}
		],
		"configuration": {
			"type": "object",
			"title": "GemStone",
			"properties": {
				"gemstone.logins": {
					"type": "array",
					"items": {
						"type": "object",
						"title": "Login Parameters",
						"properties": {
							"label": {
								"type": "string",
								"description": "A label for this login"
							},
							"library": {
								"type": "string",
								"description": "Path to libgcits"
							},
							"gem_host": {
								"type": "string",
								"description": "Hostname or IP address of gem server (NetLDI)"
							},
							"stone": {
								"type": "string",
								"description": "Stone name"
							},
							"gs_user": {
								"type": "string",
								"description": "GemStone user name"
							},
							"gs_password": {
								"type": "string",
								"description": "GemStone password"
							},
							"netldi": {
								"type": "string",
								"description": "Service name or port number"
							},
							"host_user": {
								"type": "string",
								"description": "Host OS user name (if NetLDI not in guest mode)"
							},
							"host_password": {
								"type": "string",
								"description": "Host OS password (if NetLDI not in guest mode)"
							}
						}
					},
					"default": [
						{
							"label": "Default",
							"library": "/Users/jfoster/lib/libgcits-3.5.0-64.dylib",
							"gem_host": "localhost",
							"stone": "gs64stone",
							"gs_user": "DataCurator",
							"gs_password": "swordfish",
							"netldi": "gs64ldi",
							"host_user": "",
							"host_password": ""
						}
					],
					"description": "GemStone/S 64 Bit login parameters"
				}
			}
		},
		"menus": {
			"view/item/context": [
				{
					"command": "gemstone.login",
					"when": "view == gemstone-logins",
					"group": "inline"
				},
				{
					"command": "gemstone.logout",
					"when": "view == gemstone-sessions",
					"group": "inline"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "gemstone",
					"title": "GemStone/S Tools",
					"icon": "resources/sparkle32.png"
				}
			]
		},
		"views": {
			"gemstone": [
				{
					"id": "gemstone-logins",
					"name": "Logins"
				},
				{
					"id": "gemstone-sessions",
					"name": "Sessions"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"tslint": "^5.17.0",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"gci-js": "^1.0.2"
	}
}
